  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "start:prod": "node -e \"if(!process.env.DATABASE_URL){console.error('\\n>>> DATABASE_URL mancante! Su Railway: servizio App (Legal Calendar) → Variables → New Variable → Nome: DATABASE_URL, Valore: copia la URL dal servizio PostgreSQL (Variables o Connect).\\n'); process.exit(1)}\" && prisma migrate deploy && next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "npx tsx prisma/seed.ts",
    "test:calcoli": "npx tsx src/lib/rules/plugins/atto-giuridico.calcolo.test.ts"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
